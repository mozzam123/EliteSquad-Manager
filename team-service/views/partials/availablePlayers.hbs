<div>
    <h1>Available Players</h1>
    <div class="card">
        <div class="card-body">
            <div class="scrollable-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Height</th>
                            <th>Nationality</th>
                            <th>Weight</th>
                            <th>Amount</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each flattenedPlayerData}}
                        {{#with (lookup ../randomAmt @index)}}
                        {{!-- Store amount in a variable --}}
                        {{#if @index '===' 0}}
                        {{#let playerAmount=amount}}{{/let}}
                        {{/if}}
                        <tr>
                            <td>{{this.player.name}}</td>
                            <td>{{this.player.height}}</td>
                            <td>{{this.player.nationality}}</td>
                            <td>{{this.player.weight}}</td>
                            <td>{{amount}}</td>
                            <td>
                                <button type="button" class="btn btn-primary"
                                    onclick="addPlayer('{{this.player.name}}','{{this.player.height}}','{{this.player.nationality}}','{{this.player.weight}}', {{playerAmount}})">Add</button>
                            </td>
                        </tr>
                        {{/with}}
                        {{/each}}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <!-- Modal for Player Restriction -->ton
    <div class="modal" id="errorModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Error</h5>
                </div>
                <div class="modal-body" id="modalMessage"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeModal()">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>