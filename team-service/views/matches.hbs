<!-- views/football-matches.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Football Matches</title>
</head>
<body>
  <h1>Football Matches</h1>

  <table border="1">
    <thead>
      <tr>
        <th>Match ID</th>
        <th>Home Team</th>
        <th>Away Team</th>
        <!-- Add more columns as needed -->
      </tr>
    </thead>
    <tbody>
      {{#each matches}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.homeTeam.name}}</td>
          <td>{{this.awayTeam.name}}</td>
          <!-- Add more columns as needed -->
        </tr>
      {{/each}}
    </tbody>
  </table>
</body>
</html>
